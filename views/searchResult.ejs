 <div class="col-md-2">
             <form method="post" action="/">
            <h3>Search for word meanings,type and definition.</h3>
            <input type="text" name="word">
            <button class="btn btn-primary" type="submit">search</button>
            </form>   

            <h3 class="word">Word</h3>
            <p><%= name%></p>
            <h3 class="category">Category</h3>
            <p><%= category%></p>
            <h3 class="word">Definition</h3>
            <p><%= definition%></p>
            
</div>
</div>

<!--Save the content in the textarea to localstorage-->
<script>
    if (localStorage.getItem('text_in_editor') !== null) {
    // ...then show it
    document.getElementById('textarea').value = localStorage.getItem('text_in_editor');
   }
   function save(){
       localStorage.setItem('text_in_editor', document.getElementById('textarea').value);
   }
   </script>
   
<!--Javascript file-->
<script src="../javascript/events.js"></script>   
</body>
