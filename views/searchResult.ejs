<!--BUTTONS-->
    <div class="container text-left">
        <button class="bold btn btn-dark btn-lg" ><i class="fa fa-bold"></i></button>
        <button class="italic btn btn-dark btn-lg" ><i class="fa fa-italic"></i></button>
        <button class="left-align btn btn-dark btn-lg" ><i class="fa fa-align-left"></i></button>
        <button class=" center-align btn btn-dark btn-lg" ><i class="fa fa-align-center"></i></button>
        <button class=" right-align btn btn-dark btn-lg" ><i class="fa fa-align-right"></i></button>
        <button class=" underline btn btn-dark btn-lg" ><i class="fa fa-underline"></i></button>
        <button class=" caps btn btn-dark btn-lg" >Aa</button>
